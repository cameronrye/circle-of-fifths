{
    "name": "circle-of-fifths",
    "version": "1.1.0",
    "description": "Interactive Circle of Fifths - Learn music theory through exploration",
    "main": "index.html",
    "scripts": {
        "prepare": "husky",
        "help": "node scripts/help.js",
        "test": "node tests/run-tests.js",
        "test:unit": "node tests/run-tests.js --unit",
        "test:integration": "node tests/run-tests.js --integration",
        "test:all": "node tests/run-tests.js --all",
        "test:ci": "node tests/run-tests.js --all --bail",
        "test:verbose": "node tests/run-tests.js --all --verbose",
        "test:coverage": "node tests/run-tests.js --all --coverage",
        "test:watch": "node tests/run-tests.js --all --watch",
        "test:bail": "node tests/run-tests.js --all --bail",
        "test:music-theory": "node tests/run-tests.js --unit --verbose | grep -A 20 'MusicTheory'",
        "test:audio-engine": "node tests/run-tests.js --unit --verbose | grep -A 20 'AudioEngine'",
        "test:theme-manager": "node tests/run-tests.js --unit --verbose | grep -A 20 'ThemeManager'",
        "test:circle-renderer": "node tests/run-tests.js --unit --verbose | grep -A 20 'CircleRenderer'",
        "test:accessibility": "node tests/run-tests.js tests/accessibility/**/*.test.js --verbose",
        "test:performance": "node tests/run-tests.js tests/performance/**/*.test.js --verbose",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "test:visual": "playwright test tests/e2e/visual-regression.spec.js",
        "test:visual:update": "playwright test tests/e2e/visual-regression.spec.js --update-snapshots",
        "serve": "vite preview",
        "serve:legacy": "npx http-server -p 8000 -c-1",
        "dev": "vite",
        "preview": "vite preview",
        "lint": "eslint js/ tests/ *.js",
        "lint:fix": "eslint js/ tests/ *.js --fix",
        "type-check": "tsc",
        "type-check:watch": "tsc --watch",
        "format": "npx prettier --write js/ tests/ *.js *.json *.md css/ *.html",
        "format:check": "npx prettier --check js/ tests/ *.js *.json *.md css/ *.html",
        "docs:generate": "jsdoc2md js/**/*.js > docs/API.md",
        "docs": "npm run docs:generate",
        "build": "vite build",
        "build:check": "npm run lint && npm run type-check && npm run format:check && npm run test:ci",
        "build:production": "npm run build:check && vite build",
        "validate": "npm run build",
        "precommit": "npm run lint:fix && npm run format",
        "test:unit:basic": "node tests/run-tests.js tests/unit/basic.test.js tests/unit/simple.test.js",
        "icons:generate": "node scripts/generate-icons.js",
        "icons": "npm run icons:generate"
    },
    "keywords": [
        "music",
        "music-theory",
        "circle-of-fifths",
        "education",
        "interactive",
        "web-audio",
        "javascript",
        "svg",
        "pwa",
        "scales",
        "chords",
        "key-signatures",
        "music-education",
        "audio-synthesis",
        "music-visualization"
    ],
    "author": {
        "name": "Cameron Rye",
        "email": "cameronrye@users.noreply.github.com",
        "url": "https://github.com/cameronrye"
    },
    "license": "MIT",
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/cameronrye"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@playwright/test": "^1.56.0",
        "chokidar": "^4.0.3",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "glob": "^11.0.3",
        "http-server": "^14.1.1",
        "husky": "^9.1.7",
        "jsdoc-to-markdown": "^9.1.3",
        "lint-staged": "^16.2.4",
        "prettier": "^3.6.2",
        "puppeteer": "^24.10.2",
        "sharp": "^0.34.4",
        "terser": "^5.44.0",
        "typescript": "^5.9.3",
        "vite": "^7.1.9"
    },
    "engines": {
        "node": ">=18.18.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cameronrye/circle-of-fifths.git"
    },
    "bugs": {
        "url": "https://github.com/cameronrye/circle-of-fifths/issues"
    },
    "homepage": "https://cameronrye.github.io/circle-of-fifths/",
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie <= 11"
    ],
    "files": [
        "index.html",
        "js/",
        "css/",
        "assets/",
        "manifest.json",
        "sw.js",
        "README.md"
    ],
    "directories": {
        "test": "tests"
    },
    "config": {
        "test": {
            "timeout": 5000,
            "verbose": false,
            "bail": false,
            "coverage": false
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "contributors": [
        {
            "name": "Circle of Fifths Development Team",
            "url": "https://github.com/cameronrye/circle-of-fifths/graphs/contributors"
        }
    ]
}
